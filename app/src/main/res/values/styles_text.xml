<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ViewTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="ViewSubTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="PriceItem">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>
    <style name="SmallDescription">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="ItemTitle">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/md_theme_light_outline</item>
    </style>

    <style name="TextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="boxBackgroundColor">#E5C3D3</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded" parent="">
        <item name="cornerSize">16dp</item>
        <item name="strokeWidth">2dp</item> <!-- Ancho del borde -->
        <item name="strokeColor">#000000</item> <!-- Color del borde -->
    </style>

    <style name="TVSommelai">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/rounded_border</item>
    </style>




</resources>